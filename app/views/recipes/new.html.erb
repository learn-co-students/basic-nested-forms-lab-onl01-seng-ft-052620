<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> 

        <%= f.fields_for :ingredients do |r| %> 
        <%= r.label :name %>
        <%= r.text_field :name %>
        <%= r.label :quantity %>
        <%= r.text_field :quantity %>
        <% end %> 

    <%= f.submit %> 
<% end %>
